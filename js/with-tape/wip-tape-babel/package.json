{
  "name": "node-babel-tape",
  "version": "1.0.0",
  "description": "Starter kit for code katas with node, babel and tape",
  "watch": {
    "test": "{src,test}/*.js"
  },
  "scripts": {
    "lint": "eslint ./ --ext .js",
    "test": "babel-tape-runner test/*.test.js | faucet",
    "pretest": "npm run lint",
    "test:watch": "npm-watch"
  },
  "author": "Nicolas Payot",
  "license": "ISC",
  "devDependencies": {
    "babel-eslint": "^4.1.3",
    "babel-tape-runner": "^1.2.0",
    "eslint": "^1.6.0",
    "faucet": "0.0.1",
    "lodash": "^3.10.1",
    "npm-watch": "0.0.1",
    "tape": "^4.2.1"
  }
}
